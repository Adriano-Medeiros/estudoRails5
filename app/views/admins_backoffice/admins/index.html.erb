
<div  class="row" >
    <div  class="col-lg-12" >
        <h1  class="page-header"> Listando os Administradores </h1>
    </div >
    <!-- /.col-lg-12  -->
</div >
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
              <th>#</th>
              <th>E-mail</th>
              <th> 
                <%= link_to new_admins_backoffice_admin_path  do%>
                <i class="btn btn-success btn-circle fa fa-plus"></i>
               <% end %></th>
          </tr>
      </thead>
      <tbody>
        <% @admins.each do |admin| %>
          <tr>
            <td><%= admin.id %></td>
            <td><%= admin.email %></td>
            <td>
               <%= link_to edit_admins_backoffice_admin_path(admin)  do%>
                <i class="btn btn-success btn-circle fa fa-edit"></i>
               <% end %>

                <%= link_to admins_backoffice_admin_path(admin), method: :delete, data:{confirm:"Deseja realmente excluir?"}  do%>
                <i class="btn btn-danger btn-circle fa fa-minus"></i>
               <% end %>

            </td>  
          </tr>
        <% end %>

      </tbody>
  </table>
</div>

                                        
                