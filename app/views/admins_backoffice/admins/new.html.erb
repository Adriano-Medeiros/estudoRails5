<div  class="row" >
    <div  class="col-lg-12" >
        <h1  class="page-header"> Criando um novo Administrador </h1>
    </div >
    <!-- /.col-lg-12  -->
</div >

<div class="row">
 
    <div class="col-xl-8">

    <% if @admin.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <ul>
            <% @admin.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>

        <!-- Account details card-->
        <div class="card mb-4">
            <div class="card-header">Account Details</div>
            <div class="card-body">
                <%= form_with(model: [ :admins_backoffice, @admin ], local: true) do |form| %>
                    <!-- Form Group (username)-->
                    <div class="form-group">
                       <%= form.label :email %>
                       <%= form.text_field :email, class:"form-control", placeholder:"Enter your email" %>
                                               
                    </div>
                    <!-- Form Row-->
                    <div class="form-group">
                       <%= form.label :password %>
                       <%= form.password_field :password, class:"form-control", placeholder:"Enter your senha" %>
                    </div>

                    <!-- Form Row-->
                    <div class="form-group">
                       <%= form.label :password_confirmation %>
                       <%= form.password_field :senha, class:"form-control", placeholder:"Confirm your senha" %>
                    </div>

                    <!-- Save changes button-->
                    <button type="submit" class="btn btn-primary">Save changes</button>
                <% end %>
            </div>
        </div>
    </div>
</div>